        "count"
      ],
      "properties": {
        "contact": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "location": {
          "$ref": "#/definitions/Address"
        }
      }
    },
    "Project": {
      "type": "object",
      "required": [
        "id",
        "name"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "pickUp": {
          "$ref": "#/definitions/PickUp"
        },
        "deliver": {
