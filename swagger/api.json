      ],
      "properties": {
        "address": {
          "type": "string"
        },
        "zipCode": {
          "type": "string"
        },
        "place": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        }
      }
    },
    "PickUp": {
      "type": "object",
      "required": [
