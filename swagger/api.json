    "/invoices": {
      "get": {
        "tags": [
          "invoices"
        ],
        "summary": "List of invoices",
        "description": "",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Invoice"
              }
            }
          },
          "404": {
            "description": "User not found"
