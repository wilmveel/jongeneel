{
  "swagger": "3.0",
  "info": {
    "description": "Jongeneel webshop Api",
    "version": "0.0.1",
    "title": "Jongeneel Api"
  },
  "basePath": "/api",
  "paths": {
    "/products": {
      "get": {
        "summary": "Product list ",
        "description": "List of products that matches the search term",
        "tags": [
          "products"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "q",
            "description": "Search term for products"
          }
        ],
        "responses": {
          "200": {
            "description": "List of products",
            "headers": {
              "x-count": {
                "type": "integer",
                "description": "Total amount of results"
              }
            },
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Product"
              }
            }
          },
          "400": {
            "description": "Invalid input value"
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      }
    },
    "/products/{id}": {
      "get": {
        "summary": "Product details",
        "description": "Details of a product",
        "tags": [
          "products"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "List of products",
            "schema": {
              "type": "object",
              "allOf": [
                {
                  "$ref": "#/definitions/Product"
                },
                {
                  "type": "object",
                  "properties": {
                    "variants": {
                      "type": "array",
                      "items": {
                        "$ref": "#/definitions/ProductVariant"
                      }
                    }
                  }
                }
              ]
            }
          },
          "400": {
            "description": "Invalid input value"
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      }
    },

    "/facets": {
      "get": {
        "summary": "Facets list ",
        "description": "List of all facets for a search term",
        "tags": [
          "facets"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "q",
            "description": "Search term for products"
          }
        ],
        "responses": {
          "200": {
            "description": "List of facet",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Facet"
              }
            }
          },
          "400": {
            "description": "Invalid input value"
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      }
    },

    "/cart": {
      "get": {
        "summary": "Products in cart",
        "description": "List of all products in the shopping cart",
        "tags": [
          "cart"
        ],
        "responses": {
          "200": {
            "description": "List of products",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Product"
              }
            }
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      }
    },

    "/cart/add": {
      "post": {
        "summary": "Add product to cart",
        "description": "Add product and amount to cart",
        "tags": [
          "cart"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "product",
            "description": "Reference to product and amount",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "amount": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Successfully added product to cart"
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      }
    },

    "/cart/checkout": {
      "post": {
        "summary": "Checkout cart",
        "description": "Checkout all products in cart",
        "tags": [
          "cart"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "product",
            "description": "Reference to product and amount",
            "schema": {
              "$ref": "#/definitions/Checkout"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Successfully added product to cart"
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      }
    },

    "/auth/login": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Logs user into the system",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "credentials",
            "description": "User credentials",
            "schema": {
              "$ref": "#/definitions/Credentials"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/Auth"
            }
          },
          "400": {
            "description": "Invalid username/password supplied"
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Logs out current logged in user session",
        "produces": [
          "application/json"
        ],
        "parameters": [],
        "responses": {
          "default": {
            "description": "successful operation"
          }
        }
      }
    },
    "/user/{username}": {
      "get": {
        "tags": [
          "user"
        ],
        "summary": "Get user by user name",
        "description": "",
        "operationId": "getUserByName",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "username",
            "in": "path",
            "description": "The name that needs to be fetched. Use user1 for testing. ",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "400": {
            "description": "Invalid username supplied"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "api_key": {
      "type": "apiKey",
      "in": "authorization-header",
      "authenticationScheme": "Bearer"
    }
  },
  "definitions": {
    "Product": {
      "type": "object",
      "required": [
        "id",
        "title"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "text": {
          "type": "string"
        },
        "image": {
          "type": "string"
        }
      }
    },
    "ProductVariant": {
      "type": "object",
      "required": [
        "id",
        "size"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "size": {
          "type": "string"
        },
        "price": {
          "type": "string"
        },
        "delivery": {
          "type": "string"
        },
        "amount": {
          "type": "string"
        }
      }
    },
    "Auth": {
      "type": "object",
      "required": [
        "token"
      ],
      "properties": {
        "token": {
          "type": "string"
        }
      }
    },
    "Credentials": {
      "type": "object",
      "required": [
        "username",
        "password"
      ],
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "User": {
      "type": "object",
      "required": [
        "username",
        "fullname"
      ],
      "properties": {
        "username": {
          "type": "string"
        },
        "fullname": {
          "type": "string"
        }
      }
    },

    "Facet": {
      "type": "object",
      "required": [
        "id",
        "name",
        "values"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "values": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/FacetValue"
          }
        }
      }
    },

    "FacetValue": {
      "type": "object",
      "required": [
        "name",
        "count"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "count": {
          "type": "integer"
        }
      }
    },

    "Cart": {
      "type": "object",
      "required": [
        "name",
        "count"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "count": {
          "type": "integer"
        }
      }
    },

    "Checkout": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "address": {
          "$ref": "#/definitions/Address"
        },
        "date": {
          "type": "string"
        },
        "reference": {
          "type": "string"
        },
        "note": {
          "type": "string"
        }
      }
    },

    "Address": {
      "type": "object",
      "required": [
        "name",
        "count"
      ],
      "properties": {
        "contact": {
          "type": "string"
        },
        "address": {
          "type": "string"
        },
        "zipCode": {
          "type": "string"
        },
        "place": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        }
      }
    },

    "PickUp": {
      "type": "object",
      "required": [
        "address",
        "count"
      ],
      "properties": {
        "contact": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "location": {
          "$ref": "#/definitions/Address"
        }
      }
    },

    "Project": {
      "type": "object",
      "required": [
        "id",
        "name"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "pickUp":{
          "$ref": "#/definitions/PickUp"
        },
        "deliver":{
          "$ref": "#/definitions/Address"
        }
      }
    }

  },
  "externalDocs": {
    "description": "Find out more about Swagger",
    "url": "http://swagger.io"
  }
}