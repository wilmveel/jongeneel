  "securityDefinitions": {
    "api_key": {
      "type": "apiKey",
      "in": "authorization-header",
      "authenticationScheme": "Bearer"
    }
  },
  "definitions": {
    "Product": {
      "type": "object",
      "required": [
        "id",
