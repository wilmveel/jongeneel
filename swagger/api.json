      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "text": {
          "type": "string"
        },
        "image": {
          "type": "string"
        }
      }
    },
    "ProductVariant": {
      "type": "object",
      "required": [
        "id",
        "size"
      ],
      "properties": {
