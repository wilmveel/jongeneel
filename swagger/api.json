      "required": [
        "name",
        "count"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "count": {
          "type": "integer"
        }
      }
    },
    "Checkout": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "project": {
          "$ref": "#/definitions/Project"
        },
        "date": {
          "type": "string"
        },
        "reference": {
          "type": "string"
        },
        "note": {
          "type": "string"
        }
      }
    },
    "Address": {
      "type": "object",
